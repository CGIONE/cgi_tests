{
    //
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "npm.fetchOnlinePackageInfo": false,
    "update.enableWindowsBackgroundUpdates":false,

    // copy from user to workspace
    "update.mode": "none",
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    
    //
    "files.autoSave": "onFocusChange",

    // highlight current line
    "editor.renderLineHighlight": "all",
    "workbench.colorCustomizations": 
        {
            "editor.lineHighlightBackground": "#1b1b1b00",
            "editor.lineHighlightBorder": "#30330b"
        },

    //
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": false,
    // tabs to spaces
    "editor.tabSize": 5,
    // dont detect indentions from files
    "editor.detectIndentation": false,
    "editor.foldingStrategy": "auto",
    "editor.showFoldingControls": "always",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",

    // ext
    "C_Cpp.loggingLevel": "Debug",
    "C_Cpp.intelliSenseCachePath": "D:\\003GIT\\IDE\\VSCode\\data\\tmp\\intelli_cache",
    "C_Cpp.intelliSenseCacheSize": 512,
    "C_Cpp.autoAddFileAssociations": false,
    "workbench.panel.defaultLocation": "right",
    "debug.internalConsoleOptions": "neverOpen",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.default.cStandard": "c99",
    "C_Cpp.default.cppStandard": "c++98",
    "C_Cpp.errorSquiggles": "Enabled",
    "debug.allowBreakpointsEverywhere": true,
    "workbench.editor.centeredLayoutAutoResize": false,
    "terminal.integrated.experimentalLinkProvider": false,
    "git.pullTags": false,
    "json.schemaDownload.enable": false,
    "git.confirmSync": false,
    "git.enableStatusBarSync": false,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "phase",

    // multi-command ryuta46
    "multiCommand.commands": 
    [
        {
            "command": "multiCommand.upCursorScroll",
            "interval": 0,
            "sequence": 
            [
                "cursorUp",
                "cursorUp",
                "cursorUp",
                "scrollLineUp",
                "scrollLineUp",
                "scrollLineUp",

            ]
        },

        {
            "command": "multiCommand.downCursorScroll",
            "sequence": 
            [
                "cursorDown",
                "cursorDown",
                "cursorDown",
                "scrollLineDown",
                "scrollLineDown",
                "scrollLineDown",

            ]
        },


    ],
    "lldb.dereferencePointers": false,
    "lldb.displayFormat": "auto",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.find.cursorMoveOnType": false,
    "workbench.list.smoothScrolling": true,
    "editor.fastScrollSensitivity": 3,
    "C_Cpp.workspaceSymbols": "All",
    "C_Cpp.vcpkg.enabled": false,
    "editor.quickSuggestionsDelay": 11,
    "telemetry.telemetryLevel": "off"
}


